program tnumeric
	use numeric_

! _X(Note how variables and literal constants are declared)
	integer(kind=INT_) :: i = 1_INT_
	real(kind=REAL_) :: xx = 1.0_REAL_/3.0_REAL_
! note that the COMPLEX_ kind specification must be appended to each
! literal constant ... not to the complex pair
	complex(kind=COMPLEX_) :: cc = &
		(1.0_COMPLEX_,1.0_COMPLEX_)/(3.0_COMPLEX_,0.0_COMPLEX_)

!	call show_int_(i)	! illegal - no public access

	write(6,'(/1x,"Use generic interface")')
	call show_kind(i)
	call show_kind(xx)
	call show_kind(cc)

end program tnumeric
