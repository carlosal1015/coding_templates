#!/bin/bash
echo "Sourcing SWIFT rc                          from ~/.bashrc_swift"



#============================
# Variables
#============================

    export SW="$APPDIR/swiftsim/"




#============================
# Aliases
#============================

    # Changing directories
    alias sw="cd $SW"
    alias rtd="cd $SW/doc/RTD/source/"
    alias sc="cd $SW/src"
    alias se="cd $SW/examples"


    # Running stuff
    alias sm="firefox $SW/doc/RTD/build/html/index.html"
    alias sd="firefox $SW/doc/html/index.html"
    alias mh='make clean && make html'





